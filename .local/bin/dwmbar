#!/bin/sh

bat(){
	bat="$(cat /sys/class/power_supply/BAT0/capacity)"
	echo "$bat%"
}
light(){
	light="$(sudo light | sed 's/\..*//')"
	echo "$light%"
}
vol(){
	vol="$(amixer -c 1 get Master | grep 'Mono:' | awk -F'[][]' '{print $2}')"
	echo "$vol"
}
datenow(){
	datenow="$(date +'%D %H:%M')"
	echo "$datenow"
}
while true; do
	xsetroot -name "[Batt: $(bat)] [Light: $(light)] [Vol: $(vol)] [$(datenow)]"
	sleep 30 
done
